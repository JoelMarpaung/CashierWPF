<Window x:Class="CRUDBootcamp32.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUDBootcamp32"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Forgot Password"  Height="500" Width="350"  ResizeMode="NoResize">
    <Grid Background="#FFE5E5E5">
        <Label Content="Reset Password" HorizontalAlignment="Left" Margin="113,163,0,0" VerticalAlignment="Top" Height="44" Width="138" FontSize="18"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="45,207,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="TxtEmailForgot" HorizontalAlignment="Left" Margin="150,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="154" FontSize="16"/>
        <Button x:Name="BtnReset" Content="Reset Password" HorizontalAlignment="Left" Margin="150,258,0,0" VerticalAlignment="Top" Width="154" FontSize="16" Height="38" Click="BtnReset_Click"/>
        <Button x:Name="BtnBack" Content="Back" HorizontalAlignment="Left" Margin="45,258,0,0" VerticalAlignment="Top" Width="75"  Height="38" FontSize="16" Click="BtnBack_Click" />
    </Grid>
</Window>
